<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppThemeNight" parent="AppTheme.Base.Night"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="commentHeader">@style/CommentHeaderLight</item>
        <item name="commentListItem">@style/CommentListItemLight</item>
        <item name="textColor">@android:color/black</item>
        <item name="containerBackground">@color/background</item>
        <item name="commentOverFlowIcon">@drawable/comment_overflow</item>
        <item name="commentProfileIcon">@drawable/ic_person</item>
        <item name="linkDrawerButtonBackground">@drawable/orange_button</item>
    </style>

    <style name="AppTheme.Base.Night" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/backgroundNight</item>
        <item name="commentHeader">@style/CommentHeaderDark</item>
        <item name="commentListItem">@style/CommentListItemDark</item>
        <item name="textColor">@android:color/white</item>
        <item name="containerBackground">@color/backgroundNight</item>
        <item name="commentOverFlowIcon">@drawable/comment_overflow_dark</item>
        <item name="commentProfileIcon">@drawable/ic_person_white</item>
        <item name="linkDrawerButtonBackground">@drawable/dark_button</item>
    </style>

    <style name="CommentHeaderLight">
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CommentHeaderDark">
        <item name="android:background">@drawable/card_bg_dark</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CommentListItemLight">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CommentListItemDark">
        <item name="android:background">@color/cardBackgroundNight</item>
    </style>

    <style name="ContainerLight">
        <item name="android:background">@color/background</item>
    </style>

    <style name="ContainerDark">
        <item name="android:background">@color/backgroundNight</item>
    </style>
</resources>