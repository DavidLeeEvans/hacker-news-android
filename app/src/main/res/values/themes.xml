<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppThemeNight" parent="AppTheme.Base.Night"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAppearanceLarge">@style/HnTextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/HnTextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/HnTextAppearanceSmall</item>
    </style>

    <style name="AppTheme.Settings.Night" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAppearanceLarge">@style/HnTextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/HnTextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/HnTextAppearanceSmall</item>
    </style>

    <style name="AppTheme.Base.Night" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Detail.Night" parent="AppTheme.Base.Night">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="HnTextAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="HnTextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="HnTextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>