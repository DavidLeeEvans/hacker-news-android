<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppThemeNight" parent="AppTheme.Base.Night"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="commentHeader">@style/CommentHeaderLight</item>
        <item name="commentListItem">@style/CommentListItemLight</item>
        <item name="textColor">@android:color/black</item>
        <item name="containerBackground">@color/background</item>
        <item name="commentOverFlowIcon">@drawable/comment_overflow</item>
        <item name="commentProfileIcon">@drawable/ic_person</item>
        <item name="linkDrawerButtonBackground">@drawable/orange_button</item>
        <item name="saveIcon">@drawable/ic_archive_black</item>
        <item name="deleteIcon">@drawable/ic_delete_black</item>
        <item name="upvoteIcon">@drawable/ic_thumbs_up_black</item>
        <item name="actionSaveIcon">@drawable/ic_action_archive_white</item>
        <item name="actionDeleteIcon">@drawable/ic_action_delete_white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="headerBackground">@drawable/account_header_bg</item>




        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/background</item>
        <item name="material_drawer_primary_text">@android:color/black</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
    </style>

    <style name="AppTheme.Base.Night" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/backgroundNight</item>
        <item name="commentHeader">@style/CommentHeaderDark</item>
        <item name="commentListItem">@style/CommentListItemDark</item>
        <item name="textColor">@android:color/white</item>
        <item name="containerBackground">@color/backgroundNight</item>
        <item name="commentOverFlowIcon">@drawable/comment_overflow_dark</item>
        <item name="commentProfileIcon">@drawable/ic_person_white</item>
        <item name="linkDrawerButtonBackground">@color/colorPrimaryNight</item>
        <item name="saveIcon">@drawable/ic_archive_white</item>
        <item name="deleteIcon">@drawable/ic_delete_white</item>
        <item name="upvoteIcon">@drawable/ic_thumbs_up_white</item>
        <item name="actionSaveIcon">@drawable/ic_action_archive_white</item>
        <item name="actionDeleteIcon">@drawable/ic_action_delete_white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="headerBackground">@drawable/account_header_bg_dark</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/backgroundNight</item>
        <item name="material_drawer_primary_text">@android:color/white</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@android:color/white</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_dark_selected</item>
        <item name="material_drawer_selected_text">@color/colorPrimaryDark</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
    </style>

    <style name="AppTheme.Settings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAppearanceLarge">@style/HnTextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/HnTextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/HnTextAppearanceSmall</item>
    </style>

    <style name="AppTheme.Settings.Night" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAppearanceLarge">@style/HnTextAppearanceLargeDark</item>
        <item name="android:textAppearanceMedium">@style/HnTextAppearanceMediumDark</item>
        <item name="android:textAppearanceSmall">@style/HnTextAppearanceSmallDark</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Detail.Night" parent="AppTheme.Base.Night">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="HnTextAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HnTextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HnTextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HnTextAppearanceLargeDark" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="HnTextAppearanceMediumDark" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="HnTextAppearanceSmallDark" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommentHeaderLight">
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CommentHeaderDark">
        <item name="android:background">@drawable/card_bg_dark</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CommentListItemLight">
        <item name="android:background">@color/cardBackground</item>
    </style>

    <style name="CommentListItemDark">
        <item name="android:background">@color/cardBackgroundNight</item>
    </style>

    <style name="ContainerLight">
        <item name="android:background">@color/background</item>
    </style>

    <style name="ContainerDark">
        <item name="android:background">@color/backgroundNight</item>
    </style>

</resources>